{
  "name": "zero-based-budgeting-app",
  "version": "1.0.0",
  "description": "AI-powered zero-based budgeting app with Plaid integration",
  "scripts": {
    "dev": "node scripts/deploy.js && next dev -p 3001",
    "dev:test": "NODE_ENV=test npm run dev",
    "dev:staging": "NODE_ENV=staging npm run dev",
    "build": "node scripts/deploy.js && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "postinstall": "node scripts/deploy.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:push:dev": "dotenv -e .env.development -- npx prisma db push",
    "db:push:test": "dotenv -e .env.test -- npx prisma db push",
    "db:push:staging": "dotenv -e .env.staging -- npx prisma db push",
    "db:reset": "node scripts/reset-database.js",
    "db:reset:test": "NODE_ENV=test node scripts/reset-database.js --confirm",
    "db:setup": "bash scripts/setup-postgres.sh",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "22.9.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "10.4.20",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "lucide-react": "0.263.1",
    "next": "^14.2.30",
    "next-auth": "^4.24.11",
    "openai": "^5.10.2",
    "pg": "^8.11.3",
    "plaid": "^36.0.0",
    "postcss": "8.4.49",
    "react": "18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.3.1",
    "react-markdown": "^10.1.0",
    "react-plaid-link": "^4.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "resend": "^4.7.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swr": "^2.3.4",
    "tailwindcss": "4.1.11",
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/pg": "^8.10.9",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.18",
    "prisma": "^6.12.0"
  }
}
